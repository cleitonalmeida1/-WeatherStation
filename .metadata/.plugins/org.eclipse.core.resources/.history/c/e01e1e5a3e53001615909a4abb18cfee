#ifndef MAIN_CPP_
#define MAIN_CPP_

#include "mbed.h"
#include "InsertionSort.h"
#include "SelectionSort.h"
#include "BubbleSort.h"
#include "MergeSort.h"
#include "CombSort.h"
#include "../Logger/Logger.h"
#include <iostream>
void desordenarVetor(unsigned short vetor[], unsigned short n) {
	for (int i = n; i > 0; --i) {
		vetor[n - i] = i;
	}
}

int main() {

	Timer t;
	LocalFileSystem fs("local");
	Logger logger("/local/log.txt", true);

	const unsigned short n = 5000;
	unsigned short vetor[n];

	cout << sizeof(vetor) << endl;

	desordenarVetor(vetor, n);

	CombSort comb;
	InsertionSort insertion;
	SelectionSort selection;
	BubbleSort bubble;
	MergeSort merge;

	logger.log("BubbleSort;InsertionSort;SelectionSort;MergeSort;CombSort\n\r");
	for (unsigned short i = 1; i < 101; ++i) {


		t.start();
		insertion.insertion(vetor, n);
		t.stop();
		logger.log("%f;", t.read());

		//desordenado vetor
		desordenarVetor(vetor, n);


		t.reset();
		t.start();
		bubble.buble(vetor, n);
		t.stop();
		logger.log("%f;", t.read());

		//desordenando vetor
		desordenarVetor(vetor, n);

		t.reset();
		t.start();
		selection.selection(vetor, n);
		t.stop();
		logger.log("%f;", t.read());

		//desordenando vetor
		desordenarVetor(vetor, n);

		t.reset();
		t.start();
		merge.mergeSort(vetor, 0, n);
		t.stop();
		logger.log("%f;", t.read());

		//desordenando vetor
		desordenarVetor(vetor, n);

		t.reset();
		t.start();
		comb.comb(vetor, n);
		t.stop();
		logger.log("%f\n\r", t.read());
	}
	return 0;
}

#endif /* MAIN_CPP_ */
