#include "FaultInjector.h"

FaultInjector::FaultInjector() {
	unsigned long addrStart, addrEnd;
		//Mudar para o construtor
		unsigned int userMemorySize = 0;
		//unsigned int flashMemorySize = 0;
		//unsigned int peripheralsMemorySize = 0;

		for (unsigned int i = 0; i < mb.getUserMemoryRegion().size(); ++i) {
			userMemorySize += mb.getUserMemoryRegion().getForIndex(i)->getSize();
		}

}

